@using System.Security.Claims;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Friendly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body onload="DisableFeedbackButton()">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    @*<script src="~/js/javascript.util/javascript.util.min.js" asp-append-version="true"></script>*@

    <header id="heder">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 d-flex justify-content-between">
            <div class="d-flex align-items-center">
                <a class="navbar-brand text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Friendly Social Network</a>
                <i class="fas fa-globe fa-lg text-info"></i>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="input-group w-25">
                <input type="text" class="form-control" placeholder="Search friendly" />
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fas fa-search text-red"></i>
                    </span>
                </div>
            </div>
            <div>
                <ul class="navbar-nav d-flex align-items-center">
                    <li class="nav-item p-2 rounded-circle mx-1" style="background-color:#eeeeee">
                        <a class="far fa-user-circle fa-lg text-info" asp-controller="UserProfile" asp-action="Index" asp-route-id="@null" style="text-decoration:none"></a>
                    </li>
                    <li> @(((ClaimsIdentity)User.Identity).FindFirst("FirstName").Value)</li>
                    <li class="nav-item p-2  rounded-circle  mx-1" style="background-color:#eeeeee">
                        <i class="fas fa-inbox fa-lg text-info"></i>
                    </li>
                    <li class="nav-item p-2 rounded-circle  mx-1" style="background-color:#eeeeee">
                        <i class="far fa-bell fa-lg text-info"></i>
                    </li>
                    <li class="nav-item p-2 rounded-circle  mx-1" style="background-color:#eeeeee">
                        <a class="fas fa-exclamation-triangle fa-lg text-info" style="cursor:pointer;" data-bs-toggle="modal" data-bs-target="#exampleModal" ></a>
                    </li>
                    <li class="nav-item p-2 rounded-circle ml-1" style="background-color:#eeeeee">
                        <a class="fas fa-sign-out-alt fa-lg text-info" asp-action="LogOut" asp-controller="Account"></a>
                    </li>
                </ul>
            </div>
        </nav>

        @await Component.InvokeAsync("AreaTags")

    </header>
    @RenderBody()
    <div>
    </div>

    <script>
    </script>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>




</html>
