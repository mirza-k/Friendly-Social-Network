@model ConnectionsVM

@{
    Layout = null;
}

<style>
    img {
        width: 80px;
        height: 80px;
    }

    .name {
        font-size: 15px;
        font-weight: bold;
    }

    .break {
        flex-basis: 100%;
        height: 0;
    }
    .hover:hover {
        cursor:pointer;
    }
</style>

<div class="p-3 border rounded">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div class="d-flex align-items-center">
            <h5 class="m-0">Connections</h5>
            <i class="fas fa-user-friends fa-1x text-secondary px-2"></i>
        </div>

        <div class="input-group mb-3 w-50">
            <input type="text" class="form-control" placeholder="Search connections" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">Search</span>
            </div>
        </div>
    </div>

    @if (Model.Connections.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            You dont have any connections yet.
        </div>
    }
    <div class="d-flex justify-content-between flex-wrap py-2 px-4">
        @foreach (var item in Model.Connections)
        {
            <div class="d-flex border p-2 align-items-center rounded justify-content-between mb-2" style="width: 30rem;">
                <div class="d-flex align-items-center">
                    @if (item.User.ProfileImage != null)
                    {
                        <img class="rounded mr-2" src="data:image/*;base64,@(Convert.ToBase64String(item.User.ProfileImage))" alt="Card image cap">
                    }
                    else
                    {
                        <img src="/avatar.png" class="mr-2">
                    }
                    <a asp-controller="UserProfile" asp-action="Index" asp-route-id="@item.User.Id" class="name m-0">@item.User.FirstName @item.User.LastName</a>
                </div>
                @*<a href="#" class="btn btn-primary">Connected</a>*@
                <button class="btn btn-primary"> Connected</button>
            </div>
        }
    </div>
</div>
